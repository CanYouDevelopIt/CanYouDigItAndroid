<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView android:text="Can You Dig It ?" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:id="@+id/textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/ajouterNote"
            android:layout_below="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="ajouterUneNote"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:id="@+id/parametreGroupes"
            android:onClick="parametrerGroupes"
            android:layout_alignTop="@+id/ajouterNote"
            android:layout_toLeftOf="@+id/ajouterNote"
            android:layout_toStartOf="@+id/ajouterNote" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rechercheNote"
            android:hint="Rechercher une note"
            android:layout_weight="1"
            android:layout_alignBottom="@+id/ajouterNote"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rechercheNote">

        <ListView
            android:id="@+id/listNote"
            android:layout_width="fill_parent"
            android:layout_height="394dp"
            android:layout_below="@+id/ajouterNote"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/listNote"
            >

            <Button
                android:text="Notes"
                android:id="@+id/afficherNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Archive"
                android:id="@+id/afficherArchives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/afficherNotes"
                android:layout_toEndOf="@+id/afficherNotes" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
