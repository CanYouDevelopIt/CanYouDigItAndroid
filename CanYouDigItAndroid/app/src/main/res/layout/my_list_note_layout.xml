<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/titreNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/date_note"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/dateNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gris_clair"
                android:textSize="@dimen/date_note"
                android:paddingLeft="@dimen/date_note"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below = "@id/titreNote"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/dupliquerNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/dupliquer"/>

        <ImageView
            android:id="@+id/supprimerNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/supprimer"/>

        <ImageView
            android:id="@+id/archiverNote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/archiver" />

</LinearLayout>